{
  "compilerOptions": {
    "noUnusedParameters": false,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "traceResolution": false,
    "sourceMap": true,
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "@environment": [
        "src/app/app.env"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "config/config.*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/__tests__/*.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
